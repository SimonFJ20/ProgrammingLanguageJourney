{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "outDir": "./build/",
        "watch": true,
        "sourceMap": true
    },
    "include": ["src/**/*"]
}